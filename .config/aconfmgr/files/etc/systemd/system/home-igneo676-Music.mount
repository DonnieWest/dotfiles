[Unit]
Description=SSHFS Mount for Music
After=network-online.target
Wants=network-online.target

[Mount]
What=root@192.168.1.253:/root/Music
Where=/home/igneo676/Music
Type=fuse.sshfs
Options=_netdev,reconnect,ServerAliveInterval=15,ServerAliveCountMax=3,allow_other,uid=1000,gid=1000,ssh_command=/usr/bin/sudo -u igneo676 /usr/bin/ssh

[Install]
WantedBy=multi-user.target
